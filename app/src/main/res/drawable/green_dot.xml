<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer circle (primary color) -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="5dp"
                android:height="5dp" />
            <solid android:color="@color/primary" />
        </shape>
    </item>

    <!-- Inner green circle -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <size
                android:width="5dp"
                android:height="5dp" />
            <solid android:color="@color/online_status_color" /> <!-- Green color for inner dot -->
        </shape>
    </item>

</layer-list>
